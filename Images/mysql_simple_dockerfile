# Use an official MySQL image as a parent image
FROM mysql:latest

# Set the root user password
ENV MYSQL_ROOT_PASSWORD=my-secret-pw

# Copy a custom MySQL configuration file to the container
COPY ./image_assets/my.cnf /etc/mysql/conf.d/my.cnf

# Copy a SQL script to create a new database and user
COPY ./image_assets/init.sql /docker-entrypoint-initdb.d/

# Expose the default MySQL port
EXPOSE 3306

# Start the MySQL server
CMD ["mysqld"]
